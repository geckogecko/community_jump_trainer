<?xml version="1.0" encoding="utf-8"?>
<net.colindodd.gradientlayout.GradientLinearLayout
    android:id="@+id/gradient"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="georg.steinbacher.community_jump_trainer.StandardExerciseFragment"
    android:orientation="vertical"
    style="@style/TrainingsStyle">

    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textAlignment="center"
        android:layout_margin="20sp"/>

    <georg.steinbacher.community_jump_trainer.view.ExerciseStepsView
        android:id="@+id/exercise_step_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="@dimen/card_margins_content"/>

    <TextView
        android:id="@+id/exercise_sets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Sets: XX"
        android:layout_marginLeft="@dimen/card_margins_content"/>

    <TextView
        android:id="@+id/exercise_repetitions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text= "Repetition: XX"
        android:layout_marginLeft="@dimen/card_margins_content"/>

   <georg.steinbacher.community_jump_trainer.view.EquipmentView
       android:id="@+id/equipment_view"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/card_margins_content"/>

</net.colindodd.gradientlayout.GradientLinearLayout>