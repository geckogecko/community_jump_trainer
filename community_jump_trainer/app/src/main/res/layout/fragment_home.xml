<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="georg.steinbacher.community_jump_trainer.HomeFragment">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <georg.steinbacher.community_jump_trainer.view.VerticalProgressView
            android:id="@+id/vertical_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <georg.steinbacher.community_jump_trainer.view.CurrentTrainingsPlanView
            android:id="@+id/current_trainingsPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <georg.steinbacher.community_jump_trainer.view.TrainingsPlanHistoryView
            android:id="@+id/trainings_plan_history_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.LinearLayoutCompat>

</FrameLayout>
