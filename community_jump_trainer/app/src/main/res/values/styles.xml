<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textColorSecondary">@color/lightGrey</item>
        <item name="android:textColorSecondaryInverse">@color/lightGrey</item>
        <item name="android:textColorPrimary">@color/lightGrey</item>
        <item name="android:textColorPrimaryInverse">@color/lightGrey</item>

        <item name="android:listDivider">@color/darkerGrey</item>


        <!-- preferences -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <!-- dropdown menu -->
        <item name="android:itemBackground">@color/cardBackground</item>
    </style>

    <style name="CardViewStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="cardCornerRadius">14dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
    </style>

    <style name="ButtonStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/darkerGrey</item>
    </style>

    <style name="TrainingsStyle" parent="AppTheme">
        <item name="android:background">@color/background</item>
    </style>


    <style name="AlertDialogStyle" parent="AlertDialog.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:background">@color/cardBackground</item>
    </style>
</resources>
