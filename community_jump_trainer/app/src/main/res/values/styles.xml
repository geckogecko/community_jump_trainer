<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/PreferenceFixTheme.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textColorSecondary">@color/lightGrey</item>
        <item name="android:textColorSecondaryInverse">@color/lightGrey</item>
        <item name="android:textColorPrimary">@color/lightGrey</item>
        <item name="android:textColorPrimaryInverse">@color/lightGrey</item>
        <item name="android:textColorHint">@color/darkerGrey</item>

        <item name="android:listDivider">@color/darkerGrey</item>

        <item name="alertDialogTheme">@style/DialogTheme</item>

        <!-- preferences -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <!-- dropdown menu -->
        <item name="android:itemBackground">@color/cardBackground</item>
    </style>

    <style name="CardViewStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="cardCornerRadius">14dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
    </style>

    <style name="ButtonStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/darkerGrey</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/lightGrey</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>
